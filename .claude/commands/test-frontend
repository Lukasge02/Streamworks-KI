#!/bin/bash

# Test Frontend - Run TypeScript checks and Next.js build
cd frontend

echo "🎨 Running frontend tests and quality checks..."
echo ""

echo "📋 Step 1: TypeScript type checking"
npm run type-check || echo "⚠️ Type checking found issues"

echo ""
echo "🧹 Step 2: ESLint checking"
npm run lint || echo "⚠️ Linting found issues"

echo ""
echo "🏗️ Step 3: Next.js build verification"
npm run build || echo "❌ Build failed"

echo ""
echo "✅ Frontend testing complete!"